<Window x:Class="zebra_label_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zebra_label_editor"
        xmlns:views="clr-namespace:zebra_label_editor.Views" 
        mc:Ignorable="d"
        Title="Zebra Label Editor" 
        Icon="/Assets/Icons/app_icon.ico"
        Height="440" Width="540"
        MinHeight="440" MinWidth="540"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
