<UserControl x:Class="zebra_label_editor.Views.PrintConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:zebra_label_editor.Views"
             xmlns:vm="clr-namespace:zebra_label_editor.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <d:UserControl.DataContext>
        <vm:PrintConfigViewModel/>
    </d:UserControl.DataContext>

    <Grid Background="White" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Step 4: Printer Configuration" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

            <TextBlock Text="Select Printer:" Margin="0,0,0,5" Foreground="Gray"/>

            <ComboBox ItemsSource="{Binding AvailablePrinters}" 
                      SelectedItem="{Binding SelectedPrinter}"
                      Height="35" Margin="0,0,0,20"/>

            <Border Background="#FFF4E5" BorderBrush="#FFBB96" BorderThickness="1" Padding="10" Margin="0,0,0,30" CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Make sure your Zebra printer is calibrated correctly before proceeding." 
                               TextWrapping="Wrap" VerticalAlignment="Center" Width="300" FontSize="12"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="&lt; Back" Command="{Binding GoBackCommand}" Width="100" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Print Now &gt;" Command="{Binding NextCommand}" Width="120" Padding="10,5" Background="LightBlue"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
